<div class="container mx-auto w-full">
  <div class="mx-auto flex items-center justify-center min-h-screen">
    <div class="bg-gradient-to-br from-blue-50/80 to-purple-50/80 backdrop-blur-sm rounded-2xl shadow-xl p-8 border border-blue-100 w-full max-w-lg">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-blue-800 mb-2">แก้ไขเพลง</h1>
        <p class="text-blue-600">แก้ไขข้อมูลเพลง</p>
      </div>

      <!-- Flash Messages -->
      <% if (messages.error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <i class="fas fa-exclamation-circle mr-2"></i>
          <%= messages.error %>
        </div>
      <% } %>
      
      <% if (messages.success) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
          <i class="fas fa-check-circle mr-2"></i>
          <%= messages.success %>
        </div>
      <% } %>

      <form action="/admin/edit-music/<%= music._id %>?_method=PUT" method="POST" class="space-y-6">
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="fas fa-music text-blue-400"></i>
          </div>
          <input type="text" name="title" id="title" placeholder="ชื่อเพลง" required
            value="<%= music ? music.title : '' %>"
            class="w-full pl-10 pr-4 py-3 bg-white/40 border border-blue-200 rounded-lg text-blue-900 placeholder-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all duration-300">
        </div>

        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="fas fa-user text-blue-400"></i>
          </div>
          <input type="text" name="artist" id="artist" placeholder="ศิลปิน" required
            value="<%= music ? music.artist : '' %>"
            class="w-full pl-10 pr-4 py-3 bg-white/40 border border-blue-200 rounded-lg text-blue-900 placeholder-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all duration-300">
        </div>

        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="fab fa-youtube text-blue-400"></i>
          </div>
          <input type="text" name="youtube_link" id="youtube_link" placeholder="ลิงก์ยูทูป" required
            value="<%= music ? music.youtube_link : '' %>"
            class="w-full pl-10 pr-4 py-3 bg-white/40 border border-blue-200 rounded-lg text-blue-900 placeholder-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all duration-300">
        </div>

        <div class="relative">
          <div class="absolute top-3 left-3 flex items-center pointer-events-none">
            <i class="fas fa-align-left text-blue-400"></i>
          </div>
          <textarea name="description" id="description" placeholder="คำอธิบาย (ไม่บังคับ)"
            class="w-full pl-10 pr-4 py-3 bg-white/40 border border-blue-200 rounded-lg text-blue-900 placeholder-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all duration-300"
            rows="4"><%= music ? music.description : '' %></textarea>
        </div>

        <div class="flex space-x-4">
          <button type="submit" id="submit"
            class="flex-1 bg-gradient-to-r from-blue-600 to-purple-500 hover:from-blue-700 hover:to-purple-600 text-white cursor-pointer font-bold py-3 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-blue-50">
            <i class="fas fa-save mr-2"></i>
            บันทึกการแก้ไข
          </button>
          <a href="/admin/music-list"
            class="flex-1 bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 text-white font-bold py-3 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 text-center">
            <i class="fas fa-times mr-2"></i>
            ยกเลิก
          </a>
        </div>
      </form>

      <!-- Delete Button -->
      <div class="border-t border-gray-200 pt-4">
        <form action="/admin/delete-music/<%= music._id %>?_method=DELETE" method="POST" class="w-full" onsubmit="return confirm('คุณแน่ใจหรือไม่ที่จะลบเพลงนี้? การดำเนินการนี้ไม่สามารถยกเลิกได้')">
          <button type="submit"
            class="w-full bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white font-bold py-3 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-offset-2 focus:ring-offset-red-50">
            <i class="fas fa-trash mr-2"></i>
            ลบเพลงนี้
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
