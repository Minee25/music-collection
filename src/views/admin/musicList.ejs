<div class="container mx-auto px-4 py-8">
  <!-- Flash Messages -->
  <% if (messages.error) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <i class="fas fa-exclamation-circle mr-2"></i>
      <%= messages.error %>
    </div>
  <% } %>

  <% if (messages.success) { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <i class="fas fa-check-circle mr-2"></i>
      <%= messages.success %>
    </div>
  <% } %>

  <!-- Header Section -->
  <div class="mb-8">
    <div class="bg-gradient-to-br from-blue-50/80 to-purple-50/80 backdrop-blur-sm rounded-2xl shadow-xl p-4 sm:p-6 border border-blue-100">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div class="flex items-center space-x-4">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-br from-blue-600/80 to-purple-500/80 rounded-full flex items-center justify-center">
            <i class="fas fa-music text-white text-xl sm:text-2xl"></i>
          </div>
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-blue-800">รายการเพลง</h1>
            <p class="text-blue-600 text-sm sm:text-base">จัดการเพลงในระบบ</p>
          </div>
        </div>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 w-full md:w-auto">
          <a href="/admin/add-music" class="w-full sm:w-auto bg-gradient-to-r from-green-600 to-emerald-500 hover:from-green-700 hover:to-emerald-600 text-white px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2 text-center">
            <i class="fas fa-plus mr-2"></i>
            เพิ่มเพลงใหม่
          </a>
          <a href="/" class="w-full sm:w-auto bg-gradient-to-r from-blue-600 to-purple-500 hover:from-blue-700 hover:to-purple-600 text-white px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 text-center">
            <i class="fas fa-tachometer-alt mr-2"></i>
            กลับไปหน้าหลัก
          </a>
          <form action="/admin/logout" method="POST" class="w-full sm:w-auto inline">
            <button type="submit" class="w-full sm:w-auto cursor-pointer bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-offset-2 text-center">
              <i class="fas fa-sign-out-alt mr-2"></i>
              ออกจากระบบ
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <% if (typeof musicList !=='undefined' && musicList.length> 0) { %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <div class="bg-gradient-to-br from-blue-50/80 to-purple-50/80 backdrop-blur-sm rounded-2xl shadow-xl p-6 border border-blue-100">
        <div class="flex items-center">
          <div class="w-12 h-12 bg-gradient-to-br from-blue-600/80 to-purple-500/80 rounded-full flex items-center justify-center mr-4">
            <i class="fas fa-music text-white"></i>
          </div>
          <div>
            <p class="text-blue-600 text-sm font-medium">จำนวนเพลงทั้งหมด</p>
            <p class="text-2xl font-bold text-blue-800"><%= musicList.length %></p>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-green-50/80 to-emerald-50/80 backdrop-blur-sm rounded-2xl shadow-xl p-6 border border-green-100">
        <div class="flex items-center">
          <div class="w-12 h-12 bg-gradient-to-br from-green-600/80 to-emerald-500/80 rounded-full flex items-center justify-center mr-4">
            <i class="fas fa-user text-white"></i>
          </div>
          <div>
            <p class="text-green-600 text-sm font-medium">ศิลปินทั้งหมด</p>
            <p class="text-2xl font-bold text-green-800"><%= new Set(musicList.map(music=> music.artist)).size %></p>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Music List Table -->
  <div class="bg-gradient-to-br from-blue-50/80 to-purple-50/80 backdrop-blur-sm rounded-2xl shadow-xl border border-blue-100 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gradient-to-r from-blue-600/90 to-purple-500/90 text-white">
          <tr>
            <th class="px-6 py-4 text-left font-semibold"><i class="fas fa-id-card mr-2"></i> ID</th>
            <th class="px-6 py-4 text-left font-semibold"><i class="fas fa-music mr-2"></i> ชื่อเพลง</th>
            <th class="px-6 py-4 text-left font-semibold"><i class="fas fa-user mr-2"></i> ศิลปิน</th>
            <th class="px-6 py-4 text-left font-semibold"><i class="fas fa-align-left mr-2"></i>คำอธิบาย</th>
            <th class="px-6 py-4 text-center font-semibold"><i class="fas fa-cogs mr-2"></i>จัดการ</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-blue-200">
          <% if (typeof musicList !=='undefined' && musicList.length> 0) { %>
            <% musicList.forEach((music, index)=> { %>
              <tr class="hover:bg-blue-50/50 transition-colors duration-200">
                <td class="px-6 py-4">
                  <div>
                    <div class="text-sm text-blue-600">
                      <%= music.music_id %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div>
                    <div class="font-semibold text-blue-900">
                      <%= music.title %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <span class="text-blue-800 font-medium">
                    <%= music.artist %>
                  </span>
                </td>
                <td class="px-6 py-4 truncate max-w-52">
                  <span class="text-blue-800 font-medium">
                    <%= music.description %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center justify-center space-x-2">
                    <a href="/music/<%= music._id %>" class="bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2">
                      <i class="fas fa-play mr-1"></i> เล่น
                    </a>
                    <a href="/admin/edit-music/<%= music._id %>" class="bg-gradient-to-r from-yellow-500 to-orange-500 hover:from-yellow-600 hover:to-orange-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-offset-2">
                      <i class="fas fa-edit mr-1"></i> แก้ไข
                    </a>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="6" class="px-6 py-12 text-center">
                <div class="flex flex-col items-center space-y-4">
                  <div class="w-20 h-20 bg-gradient-to-br from-blue-600/80 to-purple-500/80 rounded-full flex items-center justify-center">
                    <i class="fas fa-music text-white text-2xl"></i>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-blue-800 mb-6">ไม่มีเพลงในระบบ</h3>
                    <a href="/admin/add-music" class="bg-gradient-to-r from-blue-600 to-purple-500 hover:from-blue-700 hover:to-purple-600 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2">
                      <i class="fas fa-plus mr-2"></i> เพิ่มเพลงใหม่
                    </a>
                  </div>
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>